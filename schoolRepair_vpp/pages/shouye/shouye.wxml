    <view class="tabNav">
      <view wx:for="{{items}}" wx:key="index" class='tabselected'>
         <view class="{{currentTabIndex == index? 'selected':'noSelected'}}" 
               bindtap="currentTap"
               data-idx="{{index}}">
             {{item}}
         </view>
      </view>
    </view>

    <view>
       <!--宿舍-->
       <view hidden="{{currentTabIndex != 0}}">这是宿舍 </view>
